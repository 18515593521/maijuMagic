/*模态框*/
.modalBox{
  position:fixed;
  left: 0;
  right: 0;
  top:0;
  bottom: 0;
  z-index: 99;
  background: rgba(255,255,255,0.6);
}
.modalBox .box{
  margin: calc((100vh - 300rpx)/2) 80rpx;
  padding: 40rpx 20rpx;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333333;
  border: 2rpx solid #4ABDC2;
}
