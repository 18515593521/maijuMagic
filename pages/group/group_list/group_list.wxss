/* pages/group/group_list/group_list.wxss */
.groupListBox{
  border-top:30rpx solid #F9F9F9;
}
.groupItem{
  border-bottom:10rpx solid #F9F9F9;
 
}
.groupImg{
  width:240rpx;
  height:240rpx;
  margin-right:20rpx;
}
.titles{
  font-size:30rpx;
  height:86rpx;
}
.groupImg image{
  width:100%;
  height:100%;
  display:block;
}
.groupListText{
  width:450rpx;
  height:240rpx;
}
.nowPrice{
  font-size:42rpx;
  color:red;
}
.oldPrice{
  font-size: 24rpx;
  color: #A0A0A0;
  margin-left:20rpx;
  margin-top:16rpx;
  text-decoration: line-through;
}
.nums{
  font-size:26rpx;
  color: #A0A0A0;
  line-height:60rpx;
}
.opactions{
  border:2rpx solid #ff5857;
  width:260rpx;
  height:60rpx;
  border-radius:10rpx;

}
.numsPeople,.goBuy{
  width:130rpx;
  text-align:center;
  line-height:60rpx;
  font-size:28rpx;
}
.numsPeople{
  color:#ff5857;
  background:#fef1f1;
  border-top-left-radius:10rpx;
  border-bottom-left-radius:10rpx;
}
.goBuy{
  color:#fff;
  background: #ff5857;
  border-top-right-radius:10rpx;
  border-bottom-right-radius:10rpx;
}