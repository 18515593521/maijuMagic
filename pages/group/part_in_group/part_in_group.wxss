page{
  background:#f6f6f6;
}
/* 店铺信息 */
.shop{
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  background-color: #FFFFFF;
  padding: 20rpx;
  font-size: 28rpx;
}
.shop .logo{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
/* 产品信息 */
.product{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 20rpx;
  border-bottom: 10rpx solid #FFFFFF;
}
.product .picture{
  width: 200rpx;
  height: 200rpx;
  padding-right: 20rpx;
}
.product .info{
  width: 490rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 200rpx;
}
.product .name{
  font-size: 28rpx;
}
.product .property{
  font-size: 24rpx;
  color: #fe6665;
  padding-top: 20rpx;
}
.product .price{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}
/*头像*/
.headList{
  justify-content:center;
  margin-top:20rpx;
  display:flex;


}
.headImg{
  width:80rpx;
  height:80rpx;
  margin-right:20rpx;
  border-radius:50rpx;

}
.titles{
  width:750rpx;
  font-size:34rpx;
  line-height:60rpx;
  justify-content:center;
  align-items:center;
  text-align:center;
}
.minPirce{
  font-size:34rpx;
  color:#fe6665;
}
.manxPirce{
  color:#A0A0A0;
  font-size:22rpx;
  line-height:50rpx;
  margin-left:10rpx;

}
.end{
  font-size:22rpx;
  text-align:center;
  color:#A0A0A0;
}
.goGrounp{
  width:600rpx;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  color:#fff;
  font-size:26rpx;
  background:#fe6665;
  margin:20rpx auto;
  border-radius:20rpx;
}
.goGrounp2{
  width:100%;
  height:100rpx;
  text-align:center;
  line-height:100rpx;
  color:#fff;
  font-size:30rpx;
  background:#fe6665;
  position:fixed;
  bottom:0;
  left:0;
  right:0;
}

/*属性面板*/
.propertyPannel{
  position:fixed;
  width:100%;
  height:100%;
  top:0;
  overflow: hidden;
  z-index: 100;
}
.propertyPannel .top{
  height: 30%;
  opacity: 0.5;
  background: black;
}
.propertyPannel .bottom{
  height: 70%;
  background-color: #ffffff;
}
/*产品属性*/
.bottom .info{
  height: 240rpx;
  border-bottom: 1rpx solid #F5F5F5;
}
.bottom .productPrice{
  color: #4ABDC2;
  font-size: 38rpx;
}
.bottom .productPrice .now{
  color: #FE6165;
}
.bottom .productPrice .old{
  font-size: 28rpx;
  color: #A0A0A0;
  text-decoration: line-through;
  padding-left: 10rpx;
}
.bottom .pictureContainer{
  position: absolute;
  background-color: #ffffff;
  margin: -50rpx 30rpx;
}
.bottom .picture{
  width: 250rpx;
  height: 250rpx;
  margin: 10rpx;
}
.bottom .flex_1{
  width: 330rpx;
}
.bottom .flex_2{
  width: 350rpx;
  margin-top: 20rpx; 
}
.bottom .flex_3{
  margin-top: 20rpx; 
  width: 50rpx;
}
.bottom .quitImage{
  width: 50rpx;
  height: 50rpx;
}
.bottom .color{
  border-bottom: 1rpx solid #F5F5F5;
}
.bottom .colorItem{
  display: inline-block;
  border: 1rpx solid grey;
  border-radius: 6rpx;
  padding: 20rpx;
  margin: 10rpx 15rpx 10rpx 0;
  font-size: 10pt;
  color: grey;
}
.bottom .active{
  border: 1rpx solid #4ABDC2;
  color: #4ABDC2;
}
.bottom .count{
  border-bottom: 1rpx solid #F5F5F5;
}
.bottom .countText{
  width: 450rpx;
  line-height: 60rpx;
}
.bottom .countOperate{
  width: 300rpx;
}
.countOperate view{
  border: 1rpx solid lightgrey;
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
}
.countOperate view:nth-child(2){
  width: 100rpx;
  border-left: 0;
  border-right: 0;
}

.button_group{
  width: 100%;
  position: fixed;
  bottom: 0;
  background-color:#C9A358;
  opacity: 1;
}
.button_group .button{
  width: 366rpx;
  height: 40px;
  margin: 5rpx;
  line-height: 40px;
  text-align: center;
  display: inline-block;
  background-color:white;
  color: #C9A358;
}
.button_group .button_hover{
  background-color:#C9A358;
  color: #ffffff;
}
/*箭头菜单*/
.chooseMenu{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-top:50rpx;
  line-height: 40rpx;
  border-bottom:2rpx solid #EEEEEE;
}
.chooseMenu .name{
  font-size: 24rpx;
  color: #4C4C4C;
}
.chooseMenu .names{
  width:686rpx;
}
.chooseMenu .name image{
  width: 32rpx;
  height: 32rpx;
  margin-bottom: -8rpx;
  margin-right: 15rpx;
}

.chooseMenu .look image{
  width: 18rpx;
  height: 28rpx;
  display: block;
}
.state{
  width:500rpx;
  background:red;
  color:#fff;
  margin-top:40rpx;
  height:60rpx;
  line-height:60rpx;
  font-size:30rpx;

}
.shopAddress{
  width:710rpx;
  text-align:center;
  margin-top:30rpx;
}
.shopAddress view{
  font-size:24rpx;
  margin:0 auto 10rpx;
}

.addrImage image{
   width:30rpx;
   height:30rpx;
   display:block;
}
.addrImage view{
  color:#4ABDC2;
  margin-left:10rpx;
}