} */
.card .area3{
    width: 200rpx;

}
.card .area3 .free{
    width:70rpx;
    height:70rpx;
    line-height:35rpx;
    background-color:#FFFFFF;
    font-size:30rpx;
    text-align:center;
    padding:15rpx;
    margin:45rpx 50rpx 10rpx;
}
.card .area3 .use{
    font-size: 8pt;
    text-align: center;
    color: #FFFFFF;
    padding: 10rpx 0;
}
.card .area3 .money{
    font-size:10pt;
    color: #FFFFFF;
    text-align: center;
    line-height:40rpx;
    margin-top: 20rpx; 
}
.card .area3 .buy{
    font-size:9pt;
    background-color:#FFFFFF;
    width:120rpx;
    margin:10rpx auto;
    text-align:center;
    border-radius:5rpx;
    line-height:50rpx;
}