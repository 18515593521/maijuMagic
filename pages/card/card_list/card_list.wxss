page {
  background-color: #EEEEEE;
}
/*菜单*/
.menu {
    border-top: 2rpx solid #EEEEEE;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    background-color: #FFFFFF;
    line-height: 80rpx;
    margin-bottom: 2rpx;
}
.menu .item{
    font-size: 26rpx;
    color: #4C4C4C;
    text-align: center;
    width: 25%;
}
.menu .active{
    color: #4ABDC2;
    border-bottom: 4rpx solid #4ABDC2;
}
/*卡券*/
.card{
    height: 200rpx;
    padding: 15rpx;
}
.card .cardImage{
    width: 720rpx;
    height: 200rpx;
    position: absolute;
}
.card .cardInfo{
    display: flex;
    flex-direction: row;
    position: absolute;
}
.card .area1{
    width:140rpx;
    height:140rpx;
    font-size:30rpx;
    text-align:center;
    color:white;
    margin:30rpx 20rpx 30rpx 60rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
/* .card .area1 view:nth-child(1){
    line-height: 50rpx;
} */
.card .area1 view:nth-child(1){
    line-height: 50rpx;
    color: #FFFFFF;
    margin: 0 10rpx;
}
.card .area1 view:nth-child(3){
    line-height: 55rpx;
}
.card .area2{
    width: 300rpx;
    font-size: 24rpx;
    margin: 38rpx 0;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.card .area2 view{
    line-height: 35rpx;
}
