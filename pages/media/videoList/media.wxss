/* 搜索 */
.searchBoxs{
    position:fixed;
    margin:auto;
    top:0;
    left:0;
    right:0;
    z-index:10000;
    background:#fff;
}
.search{
  margin: 20rpx;
  width: 710rpx;
  height: 60rpx;
  position:relative;
}
.search image{
  position: absolute;
  width: 35rpx;
  height: 35rpx; 
  margin: 14rpx 20rpx;
  z-index: 99;
}
.search .searchClass{
  border: 2rpx solid #EDEDED;
  border-radius: 10rpx;
  padding: 0 20rpx 0 70rpx;
  box-sizing:border-box;
  font-size: 24rpx;
  color: grey;
  height:60rpx;
}
.search .searchTips{
  text-align: center;
  font-size: 20rpx;
  font-family: 'Microsoft YaHei';
  color: #818181;
}
/* 媒体资讯 */
.navContainer{
  width: 750rpx;
  height:88rpx;
}
.listStyle{
  height:100%;
  display:flex;
  align-items:center;
  justify-content:center;
  font-size: 28rpx;
  font-family: 'Microsoft Yahi';
  color: #474747;
}
/* 弹出层 */
