/* 瀑布流 */
.content{
  background:#EFEFEF;
  padding: 20rpx 15rpx 0 15rpx;
  text-align: justify; 
  overflow: hidden;
  margin-top:200rpx;
}  
.item{
  width: 100%;
  background-color: #fff; 
  margin-bottom: 20rpx;
  display: inline-block;
  position: relative;
}
.item-ava{
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
}
.heart{
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}
.heart_{
  display: flex;
  align-items: center;
}
.item-img{
  width: 100%
  
}
.item-title{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
    overflow: hidden;
    font-size: 24rpx;
    font-family: 'Microsoft Yahei';
    color: #333333;
    margin:0 15rpx;
  /* line-height: 100%; */
  /* text-overflow: ellipsis; */
}
.item .name{
  display: flex;
  padding: 0 15rpx;
  padding-bottom: 24rpx;
  align-items: center;
  font-size: 22rpx;
  color: #1e1e1e;
  font-family: 'PingFang SC-Medium';
}
.name image{
  flex: 0 0 30rpx;
}
.item-title-box{
  display: flex;
  width:320rpx;
  /* height:90rpx; */
  position: relative;
  /* margin-bottom : 24rpx; */
  overflow: hidden;
  /* align-items:center; */
}
.name-title{
  flex: 1;
  display: -webkit-box;
  margin-left: 12rpx;
  margin-right: 20rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 24rpx;
  color: #8a8a8a;
  font-family: 'PingFang SC-Medium';
}
.name text:last-child{
  flex: 0 0 30rpx;
  font-size: 24rpx;
  color: #8a8a8a;
  line-height: 10rpx;
  /* text-decoration: underline; */
}
.left,.right{
  display: inline-block;
  vertical-align: top;
  width: 49%;
}
.right{
  float: right;
}
.videoBtn{
  position: absolute;
  right: 0;
  width:70rpx;
  height:70rpx;
  z-index: 2;
}
.arrowImg{
  width:15rpx;
  height:9rpx;
  vertical-align: center;
}
.active{
  color: #48BEBE;
  /* border:2rpx solid red; */
}