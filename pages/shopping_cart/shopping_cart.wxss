page {
  border-top: 2rpx solid #EFEFEF;
}

.noChoose{
  width: 30rpx;
  height: 30rpx;
  border: 1px solid grey;
  border-radius: 50%;
}
.yesChoose{
  width: 34rpx;
  height: 34rpx;
  display: block;
}
/* 店铺信息 */
.shopInfo{
  display: flex;
  align-items: center;
  padding: 20rpx;
  font-size: 28rpx;
}
.shopInfo image{
  width: 36rpx;
	height: 36rpx;
  display: block;
  margin: 0 20rpx 0 0;
}
.shopInfo .shopName{
  width: 460rpx;
}
.shopInfo .operate{
  width: 200rpx;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  color: #474747;
  font-size: 26rpx;
}
.shopInfo .operate view{
  padding: 0 20rpx;
}
/* 产品信息 */
.productInfo{
  display: flex;
  align-items: center;
  background-color: #F5F5F5;
  padding: 10rpx 20rpx;
  margin-bottom: 15rpx;
}
.productInfo .image{
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 0 20rpx; 
}
.productInfo .info{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 440rpx;
  height: 200rpx;
  font-size: 26rpx;
}
.productInfo .info .title{
  color: #474747;
}
.productInfo .info .countOperate{
  padding: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333333;
}
.productInfo .info .countOperate .reduce,.add{
  width: 40rpx;
  height: 40rpx;
  border: 1rpx solid #ADADAD;
  line-height: 36rpx;
  text-align: center;
  font-size: 50rpx;
  
}
.productInfo .info .countOperate .count{

}
.productInfo .info .property{
  color: #BBBBBB;
  font-size: 22rpx;
}
.productInfo .info .price{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
/* 底部区域 */
.bottomArea{
  position: fixed;
  width: 100%;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  border-top: 2rpx solid #EFEFEF;
  background-color: #FFFFFF;
}
.bottomArea .allChoose{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100rpx;
  padding: 20rpx;
  color: #363636;
  font-size: 28rpx;
}
.bottomArea .money{
  color: #363636;
  font-size: 26rpx;
}
.bottomArea .payMoney{
  width: 250rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #FE6665;
  font-size: 30rpx;
  color: #FFFFFF;
}
/* 无数据 */
.car{
  width: 150rpx;
  height: 150rpx;
  display: block;
  margin: 50rpx auto 0;
}
.tips{
  font-size: 32rpx;
  color: #383838;
  text-align: center;
  margin: 20rpx auto;
}
.goLook{
  margin: 0 250rpx;
  background-color: #4ABDC3;
  font-size: 34rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 80rpx;
  border-radius: 40rpx;
}

/* 遮罩层 */
.maskPannel{
  position:fixed;
  width:100%;
  height:100%;
  top:0;
  background-color: rgba(0, 0, 0, 0.4)
}
/* 优惠券 */
.maskPannel .couponInfo{
  height: 500rpx;
  background: #FFFFFF;
  margin-top: calc(100vh - 500rpx);
}
.maskPannel .couponInfo .title{
  padding: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #515151;
}
.maskPannel .couponInfo .quitImage{
  width: 50rpx;
  height: 50rpx;
  display: block;
  position: absolute;
  right: 18rpx;
  margin-top: -66rpx;
}
.maskPannel .couponInfo .coupon{
  padding: 20rpx;
  border-bottom: 1rpx solid #F4F4F4;
}
.maskPannel .couponInfo .coupon .value{
  display: flex;
  align-items: center;
  font-size: 34rpx;
  color: #FF5858;
}
.maskPannel .couponInfo .coupon .value .card{
  width: 30rpx;
  height: 30rpx;
  display: block;
  margin-right: 15rpx;
}
.maskPannel .couponInfo .coupon .info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
}
.maskPannel .couponInfo .coupon .info .condition{
  color: #6D6D6D;
}
.maskPannel .couponInfo .coupon .info .timeRange{
  color: #979797;
  font-size: 20rpx;
}
.maskPannel .couponInfo .coupon .info .get{
  width: 110rpx;
  padding: 5rpx 0;
  text-align: center;
  border: 1rpx solid #FB6A6A;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #FB6A6A;
}
.maskPannel .couponInfo .coupon .info .haveGet{
  width: 110rpx;
  padding: 5rpx 0;
  text-align: center;
  border: 1rpx solid #C1C1C1;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #C1C1C1;
}