/*产品列表*/
.productList {
  border-top: 2rpx solid #D8D8D8;
}
.productList .item{
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #F7F7F7;
}

.item .cover{

}
.item .cover image{
  width: 180rpx;
  height: 180rpx;
  display: block;
  margin-right: 20rpx;
}
.item .info{
  width: 510rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.info .title{
  font-size: 26rpx;
  color: #3A3A3A;
  line-height: 40rpx;
}
.info .consult{
    font-size: 24rpx;
    color: #4ABDC2;
}

.info .otherInfo{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  line-height: 30rpx;
}
.info .otherInfo .price{
  color: #FE7071;
  font-size: 28rpx;
}
.info .otherInfo .count{
  color: #B6B6B6;
  font-size: 22rpx;
}

/*底部*/
.thisBottom{
  width: 750rpx;
  height: 80rpx;
  position: fixed;
  bottom: 0;
  background-color:#4ABDC2;
  color: #FFFFFF;
  display:flex;
  justify-content: center;
  align-items: center;
}
.clearAll{
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin-right: 20rpx;
}
