page {
  background-color: #F8F8F8;
}

.cover image{
  width: 750rpx;
  display: block;
  /* height:400rpx; */
}
.process{
  padding: 10rpx 20rpx;
  font-size: 30rpx;
  color: #323232;
}
.blue{
  color: #4ABDC2;
}
/* 状态 */
.state{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #FFFFFF;
}
.state .title{
  font-size: 26rpx;
  color: #565656;
  padding: 0 0 10rpx;
}
.state .title .sign{
  color: #4ABDC2;
  margin-left: 30rpx;
}
.state .card{
  width: 337rpx;
  height: 210rpx;
  display: block;
}
.state .code{
  width: 210rpx;
  height: 210rpx;
  display: block;
}
/* 定金 */
.money{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #FFFFFF;
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #565656;
}
/* 礼品 */
.tilte {
  background-color: #FFFFFF;
  padding: 20rpx;
  font-size: 28rpx;
  color: #565656;
  margin-top: 10rpx;
}
.giftContainer {
  background-color: #FFFFFF;
  padding: 20rpx;
}
.giftContainer .bg{
  width: 710rpx;
  height: 200rpx;
  display: block;
}
.giftContainer .info{
  width: 710rpx;
  height: 200rpx;
  position: absolute;
  margin-top: -200rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;

}
.giftContainer .info .left image{
  width: 150rpx;
  height: 150rpx;
  display: block;
  border-radius: 50%;
  margin-left: 80rpx;
}
.giftContainer .info .right{
  color: #FFFFFF;
  margin-right: 50rpx;
}
.giftContainer .info .right .limit{ 
  font-size: 26rpx;
  font-weight: bold;
  padding-right: 40rpx;
  line-height: 100rpx;
}
.giftContainer .info .right .limit .count{ 
  font-size: 50rpx;
  
}
.giftContainer .info .right .code_state{ 
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.giftContainer .info .right .code_state ._code{ 
  font-size: 20rpx;
}
.giftContainer .info .right .code_state ._state{ 
  font-size: 22rpx;
  padding: 2rpx 30rpx;
  border: 1rpx dotted #FFFFFF;
}
.giftContainer .used{
  position: absolute;
  width: 250rpx;
  height: 180rpx;
  display: block;
  margin-top: -190rpx;
  margin-left: 350rpx;
}
.giftContainer .gift{
  padding-top: 20rpx;
  font-size: 26rpx;
  color: #565656;
}
.noGift{
  font-size: 26rpx;
  color: #565656;
}
/* 沟通历史 */
.talkHistory{
  background-color: #FFFFFF;
  margin-top: 2rpx;
  padding: 20rpx;
}
.talkHistory .history{
  background-color: #F8F8F8;
  padding: 20rpx;
}
.talkHistory .history .body{
  display: flex;
  align-items: flex-start;
  font-size: 24rpx;
  color: #565656;
  padding-bottom: 20rpx;
}
 .talkHistory .history .leftLine{
  border-left: 2rpx solid #BBBBBB; 
} 
.talkHistory .history .body .time{
  width: 400rpx;
  padding-left: 21rpx;   
}
.talkHistory .history .body .time .end{
  width: 26rpx;
  height: 26rpx;
  display: inline-block;
  border-top: 10rpx solid #F8F8F8;
  position: absolute;
  margin-left: -34rpx;
  margin-top: -8rpx;
}
.talkHistory .history .body .time .previous{
  width: 18rpx;
  height: 18rpx;
  display: inline-block;
  position: absolute;
  margin-left: -30rpx;
  margin-top: 6rpx;
}
.talkHistory .history .body .content{
  width: 300rpx;
}
.talkHistory .history .body .state2{
  width: 250rpx;
  text-align: center;
}
/* 评价记录 */
.evaluation{
  padding: 20rpx;
  background-color: #FFFFFF;
}
.evaluation .time{
  font-size: 26rpx;
  color: #565656;
}
.evaluation .content{
  font-size: 30rpx;
  color: #535353;
}
/* 操作 */
.operateGroup{
  display: flex;
  flex-direction: row-reverse;
  align-items: flex-start;
  padding: 40rpx 0;
}
.operateGroup .operate{
  padding: 10rpx 0;
  margin-right: 30rpx;
  border: 2rpx solid #C8C8C8;
  border-radius: 10rpx;
  width: 180rpx;
  text-align: center;
  font-size: 28rpx;
  color: #8F8F8F;
}
/* 评价 */
.modalBox .confirm{
  margin: calc((100vh - 300rpx)/2) 80rpx;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  border: 2rpx solid #4ABDC2;
}
.modalBox .confirm textarea{
  width: 90%;
  margin: 5%;
  font-size: 26rpx;
  color: #A7A7A7;
  line-height: 40rpx;
}
.modalBox .confirm .searchTips{
  font-size: 26rpx;
  color: #A7A7A7;
}
.modalBox .confirm .operate{
  display: flex;
  align-items: center;
  border-top: 1rpx solid #E4F1E0;
  line-height: 70rpx;
  text-align: center;
  font-size: 30rpx;
}
.modalBox .confirm .operate .no{
  width: 50%;
  color: #515151;
}
.modalBox .confirm .operate .yes{
  width: 50%;
  color: #FFFFFF;
  background-color: #4ABDC2;
}