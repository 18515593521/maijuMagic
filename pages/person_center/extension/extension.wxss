page {
  background-color: #FFFFFF;
  border-top: 2rpx solid #EFEFEF;
}

/* 搜索 */
.search{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 20rpx 40rpx;
  border: 2rpx solid #F6F6F6;
  border-radius: 10rpx;
}
.search input{
  width: 620rpx;
  height: 60rpx;
  font-size: 24rpx;
  color: grey;
}
.search image{
  width: 30rpx;
  height: 30rpx;
  display: block;
  padding: 10rpx;
}
/* 列表 */
.row{
  display: flex;
  font-size: 24rpx;
  color: #767676;
}
.row + .row{
  border-bottom: 2rpx solid #F6F6F6;
}
.row .column1{
  width: 220rpx;
  line-height: 76rpx;
  text-align: center;
}
.row .column2{
  width: 230rpx;
  line-height: 70rpx;
  text-align: center;
}
.row .column3{
  width: 300rpx;
  line-height: 70rpx;
  text-align: center;
}
.head{
  background-color: #EEEEEE;
  font-size: 28rpx;
  color: #535353;
}