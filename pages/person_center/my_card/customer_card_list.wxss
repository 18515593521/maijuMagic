page {
  background-color: #EEEEEE;
}
/*菜单*/
.menu {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    background-color: #FFFFFF;
    line-height: 80rpx;
    margin-bottom: 2rpx;
    border-top: 2rpx solid #F3F3F3;
}
.menu .item{
    font-size: 26rpx;
    color: #4C4C4C;
    text-align: center;
    width: 33.33%;
}
.menu .active{
    color: #4ABDC2;
    border-bottom: 4rpx solid #4ABDC2;
}
/*卡券列表*/
.cardList{
  padding: 20rpx 40rpx;
}
.cardList .item{
  height: 180rpx;
  margin-bottom: 20rpx;
}
.cardList .item .image{
  position: absolute;
  width: 670rpx;
  height: 180rpx;
  display: block;
}
.cardList .item .info{
  width: 670rpx;
  position: absolute;
  height: 180rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  
}
/*左边*/
