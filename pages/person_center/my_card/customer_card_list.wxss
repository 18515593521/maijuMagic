/*右边*/
.cardList .item .info .right{
  width: 420rpx;
  height: 160rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 24rpx;
}
.right .shopName{
  color: #565656;
}
.right .time{
  font-size: 20rpx;
  color: #C0C0C0;
}
.right .condition>text:nth-child(1){
